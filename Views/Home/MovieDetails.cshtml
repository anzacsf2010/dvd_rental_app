@model dvd_rental_app.Models.Movie

@{
    ViewData["Title"] = Model.Title;
}
<h1 class="mb-3">@ViewData["Title"]</h1>

<div class="mb-4">
    <p><strong>Tagline:</strong> @Model.Tagline</p>
    <p><strong>Overview:</strong> @Model.Overview</p>
    <p><strong>Release date:</strong> @Model.ReleaseDate</p>
    <p><strong>Status:</strong> @Model.MovieStatus</p>
    <p><strong>Genre:</strong> <a asp-controller="Home" asp-action="MoviesByGenre" asp-route-id="@Model.Genre">@Model.Genre</a></p>
    <p><strong>Top cast:</strong> @Model.Cast</p>
    <p><strong>Length:</strong> @Model.Runtime min(s)</p>
    <p><strong>Popularity:</strong> @Math.Round((@Model.Popularity ?? 0M), 2).ToString("0.00") / 100</p>
    <p><strong>Budget:</strong> @Math.Round((@Model.Budget ?? 0M), 2).ToString("0,000.00") USD</p>
    <p><strong>Revenue:</strong> @Math.Round((@Model.Revenue ?? 0M), 2).ToString("0,000.00") USD</p>
    @if (Model.Homepage != "")
    {
        <p><strong>Homepage:</strong> <a href="@Model.Homepage">@Model.Homepage</a></p>
    }
</div>
<div class="mb-4">
    <a type="button" class="btn btn-primary" asp-controller="Home" asp-action="UpdateCart" asp-route-id="@Model.MovieId">Add to / Remove from Cart</a>
</div>
<div>
    <a type="button" class="btn btn-primary" asp-controller="Home" asp-action="Movies">Return to movie list</a>
</div>

